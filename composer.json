{
    "name": "jsonbaby/php-package-template",
    "description": "Template for PHP packages",
    "type": "project",
    "require": {
        "php": "^8.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.8",
        "vimeo/psalm": "5.x-dev"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your-email@example.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "PhpPackageTemplate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpPackageTemplate\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
